        </guards>
      </li>
      <li>
        <kindDef>Settlement</kindDef>
        <options>
          <AvaliColonist>10</AvaliColonist>
          <AvaliKeeper>5</AvaliKeeper>
          <AvaliHunter>10</AvaliHunter>
          <AvaliSecurityGuard>10</AvaliSecurityGuard>
          <AvaliStalker>10</AvaliStalker>
