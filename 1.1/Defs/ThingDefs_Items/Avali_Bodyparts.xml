    </statBases>
  </ThingDef>

  <!-- ClothTail -->
  <ThingDef ParentName="BodyPartProstheticBase">
    <defName>ClothAvaliTail</defName>
    <label>cloth Avali tail</label>
    <description>A simple replacement made out of cloth. At least it feels like there's something.</description>
    <statBases>
      <MarketValue>50</MarketValue>
      <Mass>3</Mass>
