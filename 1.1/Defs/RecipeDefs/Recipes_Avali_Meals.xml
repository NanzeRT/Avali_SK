        <filter>
          <thingDefs>
            <li>AvaliEgg</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
		</ingredients>
		<products>
      <AvaliEggOmlette>10</AvaliEggOmlette>
    </products>
    <workSkill>Cooking</workSkill>
