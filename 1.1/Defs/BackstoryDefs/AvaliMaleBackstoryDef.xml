    </spawnCategories>
    <skillGains>
      <li>
        <defName>Social</defName>
        <amount>-6</amount>
      </li>
      <li>
        <defName>Shooting</defName>
        <amount>12</amount>
        </li>
      <li>
        <defName>Melee</defName>
        <amount>8</amount>
