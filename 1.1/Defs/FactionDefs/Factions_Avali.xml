          <Alpaca>2</Alpaca>
        </carriers>
        <guards>
          <AvaliColonist>3</AvaliColonist>
          <AvaliHunter>10</AvaliHunter>
          <AvaliKeeper>10</AvaliKeeper>
          <AvaliSecurityGuard>10</AvaliSecurityGuard>
          <AvaliStalker>10</AvaliStalker>
