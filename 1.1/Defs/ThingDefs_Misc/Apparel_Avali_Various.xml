  <!-- ====================================== Avali wrap =========================================== -->
  <ThingDef ParentName="AvaliApparelMakeableBase">
    <defName>Avali_Apparel_Wrap</defName>
    <description>Never one to suffer indignity.</description>
    <label>avali wrap</label>
